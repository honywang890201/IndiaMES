<mesex:Window x:Class="EquipmentManagement.Edit.EquipmentRepair_EditMaintenanceParts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="更换部件" 
        xmlns:mes="http://www.mes.com"
        xmlns:mesex="http://www.mesex.com" SizeToContent="WidthAndHeight" MinWidth="700">
    <AdornerDecorator>
        <Grid x:Name="grid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <mesex:ListGrid >
                <mesex:ListGrid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </mesex:ListGrid.ColumnDefinitions>


                <TextBlock Text="更换部件" FontSize="15" HorizontalAlignment="Center" Grid.ColumnSpan="2" />

                <TextBlock Text="部件代码"/>
                <mesex:TextBoxQuery x:Name="txtItem" MetaId="51" SelectedIndexChanged="txtItem_SelectedIndexChanged"/>

                <TextBlock Text="部件规格"/>
                <mesex:TextBox x:Name="txtItemSpecification" IsReadOnly="True" />

                <TextBlock Text="使用数量"/>
                <mesex:FloatTextBox x:Name="txtQty" />

            </mesex:ListGrid>

            <mesex:CircleImageButton Grid.Row="1" HorizontalAlignment="Center" Margin="15" Content="保存" ImageSource="/EquipmentManagement;component/Images/save.png"
                                     Click="CircleImageButton_Click"/>
        </Grid>
    </AdornerDecorator>
</mesex:Window>
